<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="./css/userpage.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>

    <ul>
        <li><a><i class="fa fa-mobile-phone"
                    style="font-size:25px;color:white;font-style: italic;"> Mobi Hub</i></a></li>
        <li style="float:right"><a class="active" href="/"><i class="fa fa-sign-in"
                    style="font-style: italic; font-size:25px;color:white"> Logout</i></a></li>
    </ul>

    <div class="tab">
        <a href="/userhome" class="tablinks">Home</a>
        <a href="/userorders" class="tablinks">My Orders</a>
        <a href="/cart" class="tablinks">cart</a>
    </div>

    <div id="orders" class="tabcontent">

        <table>
            <tr>
                <th>Name</th>
                <th>Mobile</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Mail Id</th>
                <th>price</th>
                <th>Date</th>
            </tr>

            <% if (list.length > 0) { %>
                <% for (let user of list) { %>

                    <tr>
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.pName %>
                        </td>
                        <td>
                            <%= user.address %>
                        </td>
                        <td>
                            <%= user.mobile %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td>
                            <%= user.price %>
                        </td>
                        <td>
                            <%= user.date %>
                        </td>
                    </tr>


                    <% } %>
                        <% } else { %>
                            <h1>Orders Not placed yet</h1>
                            <% } %>




        </table>

    </div>


    <script src="./js/userpage.js">
    </script>

    <script src='./js/productslist.js'></script>

</body>

</html>